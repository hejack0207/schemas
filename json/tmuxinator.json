{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type":"object",
    "properties": {
        "name": {
            "type": "string"
        },
        "root": {
            "type": "string"
        },
        "attach": { "type": "boolean"},
        "socket_name" : { "type": "string" },
        "tmux_options" : {
            "type": "string"
        },
        "tmux_command" : {
            "type": "string"
        },

        "on_project_start": { "type": "string"},
        "on_project_first_start" : { "type": "string" },
        "on_project_restart" : { "type": "string" },
        "on_project_exit" : { "type": "string" },
        "on_project_stop" : { "type": "string" },
        "pre_window": { "type": "string"},

        "windows": {
            "type": "array",
            "items": [
                { "type": "string" },
                { "$ref": "#/definitions/window" }
            ]
        },
        "startup_window" : {
            "type": "string"
        }
    },
    "required": [
        "name","root"
    ],
    "definitions": {
        "window": {
            "additionalProperties": {
                "$ref": "#/definitions/window_properties"
            }
        },
        "window_properties": {
            "properties": {
                "layout": {
                    "enum": [
                        "even-horizontal","even-vertical","main-horizontal","main-vertical","tiled"
                    ]
                },
                "panes": {
                    "type": "array",
                    "items": [
                        { "$ref": "#/definitions/pane" },
                        { "type": "string" }
                    ]
                },
                "root": { "type": "string" }
            }
        },
        "pane":{
            "additionalItems": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}
